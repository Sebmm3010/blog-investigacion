---
import MainLayout from "../../layouts/MainLayout.astro";
import { actividades } from "../../data";
import ActividadCard from "../../components/ActividadCard.astro";
---

<MainLayout
  title="IE Soledad Román de nuñez - Actividades de investgacion"
  desc="Blog donde se muestran las actividades de investigacion"
>
  <section class="container" aria-label="New Blog Posts">
    <h1 class="h1">Todas las actividades</h1>
    <div class="post-container">
      {
        actividades.map((actividad) => (
          <ActividadCard {actividad} tagType="h2" />
        ))
      }
    </div>
  </section>
</MainLayout>
